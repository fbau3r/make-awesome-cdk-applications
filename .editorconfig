# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[{*.md,*.markdown}]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[{.editorconfig,.markdownlint.jsonc}]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
